@model Sofer
 
@{
    ViewData["Title"] = "Sterge sofer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1>Delete confirmation for @Model.NumeComplet</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" src="@Model.ImagineUrl" />
                </div>
                <div class="form-group">
                    <label asp-for="ImagineUrl" class="control-label"></label>
                    <input asp-for="ImagineUrl" class="form-control" readonly />
                    <span asp-validation-for="ImagineUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumeComplet" class="control-label"></label>
                    <input asp-for="NumeComplet" class="form-control" readonly />
                    <span asp-validation-for="NumeComplet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Biografie" class="control-label"></label>
                    <input asp-for="Biografie" class="form-control" readonly />
                    <span asp-validation-for="Biografie" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Sterge">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("input[name='ImagineUrl']").val(); // Accesează valoarea corectă a input-ului pentru imagine
        });
    </script>
}
