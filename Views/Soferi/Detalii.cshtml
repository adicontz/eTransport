@model Sofer

@{
    ViewData["Title"] = "Detaliile soferului ";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detaliile @Model.NumeComplet</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" stule="max-width: 150px" id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ImagineUrl" class="control-label"></label>
                        <input asp-for="ImagineUrl" class="form-control" />
                        <span asp-validation-for="ImagineUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumeComplet" class="control-label"></label>
                        <input asp-for="NumeComplet" class="form-control" />
                        <span asp-validation-for="NumeComplet" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biografie" class="control-label"></label>
                        <input asp-for="Biografie" class="form-control" />
                        <span asp-validation-for="Biografie" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outlione-succes float-right" asp-action="Editeaza" asp-route-id="@Model.Id">Editeaza</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ImagineUrl").val();
        })
    </script>
}
