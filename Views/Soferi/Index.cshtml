@model IEnumerable<Sofer>

@{
    ViewData["Title"] = "Lista Soferilor";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(Model => Model.ImagineUrl)</th>
                    <th>@Html.DisplayNameFor(Model => Model.NumeComplet)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Biografie)</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ImagineUrl" alt="@item.NumeComplet" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NumeComplet)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Biografie)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Editeaza" asp-route-id="@item.Id", new { id = item.Id })"><i class="bi bi-pencil-square"></i>Editeaza</a> |
                            <a class="btn btn-outline-info" asp-action="Detalii" asp-route-id="@item.Id, new { id = item.Id })"><i class="bi bi-eye"></i>Detalii</a> |
                            <a class="btn btn-danger text-white" asp-action="Sterge" asp-route-id="@item.Id", new { id = item.Id })"><i class="bi bi-trash"></i>Sterge</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Soferi" asp-action="Adauga" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Adauga
    </a>
</div>


