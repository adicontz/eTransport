@model IEnumerable<Locatie>

@{
    ViewData["Title"] = "Lista Locatilor";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(Model => Model.ImagineUrl)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Nume)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Descriere)</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ImagineUrl" alt="@item.Nume" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nume)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Descriere)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" href="@Url.Action("Editeaza", new { id = item.Id })"><i class="bi bi-pencil-square"></i>Editeaza</a> |
                            <a class="btn btn-outline-info" href="@Url.Action("Detalii", new { id = item.Id })"><i class="bi bi-eye"></i>Detalii</a> |
                            <a class="btn btn-danger text-white" href="@Url.Action("Sterge", new { id = item.Id })"><i class="bi bi-trash"></i>Sterge</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
